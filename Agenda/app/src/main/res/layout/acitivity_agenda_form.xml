<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextFormName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        />

    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerTelefone"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >

        </Spinner>

        <Button
            android:id="@+id/btnTelefone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:text=" + TELEFONE"
            android:textSize="15dp"
            android:textAlignment="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerEmail"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >

        </Spinner>

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:text=" + EMAIL"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerRede"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >

        </Spinner>

        <Button
            android:id="@+id/btnRede"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:text=" + REDE SOCIAL"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editTextFormCep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="CEP"
            />

        <Button
            android:id="@+id/btnCep"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:text="ATRIBUIR"
            android:textSize="18dp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextFormRua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua"
        />

    <EditText
        android:id="@+id/editTextFormBairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro"
        />

    <EditText
        android:id="@+id/editTextFormCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cidade"
        />



</LinearLayout>