<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextFormName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerTelefone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            >

        </Spinner>

        <Button
            android:id="@+id/btnTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            >

        </Spinner>

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerRede"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            >

        </Spinner>

        <Button
            android:id="@+id/btnRede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_btn_radio_to_on_mtrl_000"
            />

    </LinearLayout>



    <EditText
        android:id="@+id/editTextFormCep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CEP"
        />

    <EditText
        android:id="@+id/editTextFormRua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua"
        />

    <EditText
        android:id="@+id/editTextFormBairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro"
        />

    <EditText
        android:id="@+id/editTextFormCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cidade"
        />



</LinearLayout>